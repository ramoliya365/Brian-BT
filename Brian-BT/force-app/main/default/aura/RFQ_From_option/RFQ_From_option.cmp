<aura:component controller="RFQFromOption" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />    
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="createRfq" type="RFQ__c" default="{'sobjectType':'RFQ__c',
                                                            'Name':'',
                                                            'buildertek__RFQ_Details__c':'',
                                                            'buildertek__Due_Date__c':''}" />
    <!-- <aura:handler name="init" value="{! this }" action="{! c.init }" /> -->
    <aura:if isTrue="{!v.Spinner}">
        <div aura:id="spinnerId" class="slds-spinner_container">
            <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                <span class="slds-assistive-text">Loading</span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </aura:if>
    <aura:html tag="style">
        .slds-modal__content {
            height: unset !important;
            max-height: unset !important;
            overflow: hidden !important;
        } 
        .slds-modal__container{
            max-width: 60rem !important;
            width:70% !important;
        }   
        .container{
            height: auto !important;
        }
        .slds-modal__close{
            display:block !important;    
        }
        .slds-docked-form-footer{
            bottom: auto;
        }
        .slds-p-around--medium{
            padding: 0;
        }
        .forceChatterBasePublisher :not(.PHONE) .cuf-content{
            padding: 0;
        }
        .modalBodyDiv{
            text-align: center;
            font-weight: 600;
            line-height: 10rem;
            font-size: 18px;
        }
    </aura:html>
    <div class="slds-modal__content">
        <div class="slds">
            <header class="slds-modal__header">
                <div class="" id="header" style="font-size:20px;">
                    Create RFQ
                </div>
            </header>    
            <div style="max-height: 74vh;overflow:auto;">
                <div style="padding: 10px 10px 0px;">
                    <lightning:recordEditForm objectApiName="buildertek__RFQ__c">
                        <lightning:inputField fieldName="Name" value="{!v.createRfq.Name}" required = "true"/>
                        <lightning:inputField fieldName="buildertek__RFQ_Details__c" value="{!v.createRfq.buildertek__RFQ_Details__c}" />
                        <lightning:inputField fieldName="buildertek__Due_Date__c" value="{!v.createRfq.buildertek__Due_Date__c}" />
                    </lightning:recordEditForm>
                </div>
            </div>
            <footer role="contentinfo" class="slds-docked-form-footer fixedFooter" style="display:block;text-align:right;padding-right:5px;">
                <button class="slds-button slds-button--neutral" onclick="{!c.closeModal}"> Cancel </button>
                <button class="slds-button slds-button--brand" onclick="{!c.createRFQ}" style="margin: 0 0.5rem;"> Create </button>
            </footer>
        </div>
    </div>
</aura:component>