    <script>
        function scrolldown() {
            //alert('hiii');
            //document.getElementById('footer').scrollIntoView();
            //window.onload = document.getElementById('footer').scrollIntoView(true);
            window.scrollTo(0, 2800);
        }
        function scrollup() {
            //alert('hiii');
            //document.getElementById('footer').scrollIntoView();
            //window.onload = document.getElementById('footer').scrollIntoView(true);
            window.scrollTo(0, 0);
