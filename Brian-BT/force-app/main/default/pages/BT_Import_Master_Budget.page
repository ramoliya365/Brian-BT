<apex:page standardController="Budget__c" title="Import Master Budget" extensions="BT_ImportBudget" recordSetVar="b">
	<c:BT_JsAndCssIncludeComponent importJquery="true"
                              importAppurinUtil="true"
                              importJQueryLayout="false"
                              importFancyTree="false"
                              importJqGrid="false"
                              importEasyTooltip="false"
                              importAppurinCss="true"
                              importCkEditor="false"
                              importGnattChart="false"
                              importLightningDesign="true"/>
	
	<apex:form > 
		<div class="slds slds-scope" style="padding:30px;">
			<br/>
			<h1 style="font-size: 1.2rem;">Project > {!project.Name} > Select Master Budget To Import in Project</h1>
			<br/>
			<table class="slds-table slds-table_bordered slds-table_fixed-layout" role="grid">
				<thead>
					<tr class="slds-text-title_caps">
						<th  aria-label="" scope="col" style="width: 50px;">
							
						</th>
						<th  aria-label="Title" scope="col">
							Title
						</th>
						<th aria-label="Description" scope="col">
							Original Budget
						</th>
					</tr>
				</thead>
				<tbody>
				<apex:repeat var="mBudget" value="{!masterBudgets}">
					<tr class="slds-hint-parent">
						<td style="width:50px;">
							<apex:inputCheckbox value="{!mBudget.isSelected}" id="selectedschedule"/>
						</td>
						<apex:outputPanel rendered="{!IF(mBudget.budget != null,true,false)}">
    						<td role="gridcell">
    							{!mBudget.budget.Name}
    						</td>
    						<td  role="gridcell">
    							<apex:outputText value="{0, number, currency}">
    							    <apex:param value="{!mBudget.budget.Original_Budget__c}" />
    							</apex:outputText>    
    						</td>
    				    </apex:outputPanel>
    				    <apex:outputPanel rendered="{!IF(mBudget.masterBudget != null,true,false)}">
    						<td role="gridcell">
    							{!mBudget.masterBudget.Name}
    						</td>
    						<td  role="gridcell">
    							<apex:outputText value="{0, number, currency}">
    							    <apex:param value="{!mBudget.masterBudget.Original_Budget__c}" />
    							</apex:outputText>    
    						</td>
    				    </apex:outputPanel>
					</tr>
				</apex:repeat> 
				</tbody>
			</table> 
			
			<div>
		        <div class="slds-docked-form-footer">
		            <button type="button" class="slds-button slds-button_neutral" onclick="goback(),reloadPage();">Cancel</button>
		            <button type="button" class="slds-button slds-button_brand" onclick="save();">Import Master Budget </button>
		        </div>
		    </div>
		</div>
		<!--<apex:includeScript value="/support/console/43.0/integration.js"/>-->
		<apex:includeScript value="{!URLFOR($Resource.supportconsole_js)}"/>
		<script>
        
