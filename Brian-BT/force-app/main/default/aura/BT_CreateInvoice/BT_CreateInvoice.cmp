<aura:component controller="CreateInvoiceFromContract" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global">
    
	<aura:handler name="init" value="{!this}" action="{!c.init}" />
    <lightning:notificationsLibrary aura:id="notifLib"/>
	<div aura:id="progressbar">
    	<center>
	    	<img alt="Generating new invoice." src="{!$Resource.gearsloading}" style="height:150px !important;"/>
	    	<br/>
	    	Creating New Invoice <br/> Please don't leave this page until invoice is created.
    	</center> 
    </div>
    
</aura:component>