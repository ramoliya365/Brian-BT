<aura:component controller="ImportMasterBudgets" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global">
    <aura:attribute name="masterBudgetsList" type="object" />
    <aura:attribute name="Spinner" type="Boolean" />
    
    <!-- Attribute Declration For Pagination -->
    
    <aura:attribute name="PaginationList" type="Object"/>
    <aura:attribute name="startPage" type="Integer" />
    <aura:attribute name="endPage" type="Integer"/>
    <aura:attribute name="totalRecords" type="Integer"/>
    <aura:attribute name="pageSize" type="Integer" default="10"/>
    
    <!-- Attribute Declration For Pagination End-->
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> 
    
    <div class="slds-modal__header" style="font-size:17px;">
        Import Master Quotes
    </div>
    <div class="slds-modal__content slds-p-around--large">
        <div class="slds slds-scope">
    		<table class="slds-table slds-table_bordered slds-table_fixed-layout" role="grid">
    		    <thead>
    				<tr class="slds-text-title_caps"> 
    					<th width="10%" scope="col" style="background-color:rgba(27, 82, 151, 1.0); color:white; border-top-left-radius:5px;vertical-align: top;line-height: 2;">
    				        <ui:inputCheckbox aura:id="checkContractors" change="{!c.selectAll}" />		
    					</th>
    					<th width="40%" style="background-color:rgba(27, 82, 151, 1.0); color:white;vertical-align: top;line-height: 2;">
    						Title
    					</th>
    					<th width="25%" style="background-color:rgba(27, 82, 151, 1.0); color:white;vertical-align: top;line-height: 2;">
    						Project
    					</th>
    					<th width="25%" style="background-color:rgba(27, 82, 151, 1.0); color:white;vertical-align: top;line-height: 2;">
    						Type
    					</th>
    				</tr>  
    			</thead>
    			<tbody>
    			    <aura:iteration items="{!v.PaginationList}" var="rec">
    			        <tr class="slds-hint-parent">
    			            <aura:if isTrue="{!rec.masterBudgetRecord != null}">
    			                <td style="width: 30px;">
        			                <ui:inputCheckbox aura:id="checkContractor" value="{rec.budgetCheck}" text="{!rec.masterBudgetRecord.Id}" change="{!c.handleCheck}" />
        			            <!--    <lightning:input aura:id="quoteselection" type="checkbox" value="{!rec.quoteCheck}" text="{!rec.quoteRecord.Id}" onclick="{!c.uncheckAll}" style="cursor: pointer !important;"/>-->
        			            </td> 
        			            <td role="gridcell">
        			                <ui:outputText value="{!rec.masterBudgetRecord.Name}" />  
        			            </td>
        			            <td role="gridcell">
        			                <ui:outputText value="{!rec.masterBudgetRecord.buildertek__Project__r.Name}" />  
        			            </td>
        			            <td role="gridcell">
        			                <ui:outputText value="{!rec.masterBudgetRecord.buildertek__Type__c}" />  
        			            </td>
        						<aura:set attribute="else">
        						    <td style="width: 30px;">
            			                <ui:inputCheckbox aura:id="checkContractor" value="{rec.budgetCheck}" text="{!rec.budgetRecord.Id}" change="{!c.handleCheck}" />
            			            <!--    <lightning:input aura:id="quoteselection" type="checkbox" value="{!rec.quoteCheck}" text="{!rec.quoteRecord.Id}" onclick="{!c.uncheckAll}" style="cursor: pointer !important;"/>-->
            			            </td> 
            			            <td role="gridcell">
            			                <ui:outputText value="{!rec.budgetRecord.Name}" />  
            			            </td>
            			            <td role="gridcell">
            			                <ui:outputText value="{!rec.budgetRecord.buildertek__Project__r.Name}" />  
            			            </td>
            			            <td role="gridcell">
            			                <ui:outputText value="{!rec.budgetRecord.buildertek__Type__c}" />  
            			            </td>   
        						</aura:set>
    			            </aura:if>
    			            
    			        </tr>
    			    </aura:iteration>
    			</tbody>
    		</table>
    		<br/>
            <lightning:buttonGroup >
                <lightning:button label="Previous" disabled="{!v.startPage == 0}"  
                                  onclick="{!c.previous}" variant="brand"
                                  iconName='utility:back'/>
                &nbsp; &nbsp; &nbsp;
                <lightning:button label="Next" disabled="{!v.endPage >= v.totalRecords}" 
                                  onclick="{!c.next}" variant="brand"
                                  iconName='utility:forward' iconPosition='right'/>
            </lightning:buttonGroup>
        </div> 
        <aura:if isTrue="{!v.Spinner}">
            <div aura:id="spinnerId" class="slds-spinner_container">
               <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                 <span class="slds-assistive-text">Loading</span>
                 <div class="slds-spinner__dot-a"></div>
                 <div class="slds-spinner__dot-b"></div>
                    <div class="custom-loading-text">
                           <b>Processing, Please Wait</b>
                       </div>
               </div>
            </div>
        </aura:if>
    </div>
    <div class="slds-modal__footer">
    	<button class="slds-button slds-button--neutral" onclick="{!c.closeModel}" >Cancel</button>
    	<button class="slds-button slds-button--brand" onclick="{!c.importBudget}">Import Master Budget</button>
    </div>
</aura:component>